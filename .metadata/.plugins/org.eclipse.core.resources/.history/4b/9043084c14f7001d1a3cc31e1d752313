package com.cliente.example;

import javax.naming.Context;
import javax.naming.InitialContext;
import javax.naming.NamingException;

import com.example.HellowWorld;

public class Test1 {

	private static HellowWorld hellowWorld;  
	
	public static void main(String[]args) throws NamingException {
		//(RemoteCalculator) context.lookup("ejb:" + appName + "/" + moduleName + "/" + distinctName + "/" + beanName + "!" + viewClassName);
		Context context = new InitialContext();
		String appName = ""; 
	    String moduleName = "remote"; 
	    String distinctName = ""; 
	    String beanName = "HelloWorld"; 
	    String viewClassName = HellowWorld.class.getName();
	    String toLookup = String.format("ejb:%s/%s/%s/%s!%s",
	      appName, moduleName, distinctName, beanName, viewClassName);
	    return (HelloWorld) context.lookup(toLookup);
		hellowWorld = (HellowWorld) Context.lookup("ejb:test-1/test-1//HellowWorld!HellowWorld");
	System.out.println();	
	}
	
}
